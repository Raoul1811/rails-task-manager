<h1>My Task</h1>

<h2><%= @task.title %></h2>
<p>Details: <%= @task.details %></p>
<p>Completed: <%= @task.completed %></p>
<%= link_to "back to index", tasks_path %>
<%= link_to "update the task", edit_task_path(@task) %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
             data: { confirm: "Are you sure?" } %>